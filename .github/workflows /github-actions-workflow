name: 

on:
  push:
    branches:
      - main   
  pull_request:
    branches:
      - main   

jobs:
  build-and-test:
    runs-on: ubuntu-latest

    steps:
      
      - name: Checkout Hexo repository
        uses: actions/checkout@v3

    
      - name: Set up Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '16'  # Specify your Node.js version
          cache: 'npm'

  
      - name: Install dependencies
        run: npm ci


      - name: Generate Hexo site
        run: npx hexo generate

    
      - name: Start Hexo server
        run: |
          npx hexo server &
          echo $! > hexo.pid

  
      - name: Wait for Hexo server to start
        run: npx wait-on http://localhost:4000

    
      - name: Checkout Playwright test repository
        uses: actions/checkout@v3
        with:
          repository: your-username/playwright-test-repo
          path: playwright-test-repo

   
      - name: Install Playwright dependencies
        working-directory: playwright-test-repo
        run: npm ci


      - name: Install Playwright browsers
        working-directory: playwright-test-repo
        run: npx playwright install


      - name: Run Playwright tests
        working-directory: playwright-test-repo
        run: npx playwright test --config=path-to-your-playwright-config

     
      - name: Stop Hexo server
        if: always()
        run: |
          kill $(cat hexo.pid)

  deploy:
    runs-on: ubuntu-latest
    needs: build-and-test
    if: github.event_name == 'push'

    steps:
      - name: Checkout Hexo repository
        uses: actions/checkout@v3

      - name: Set up Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '16'
          cache: 'npm'

      - name: Install dependencies
        run: npm ci

      - name: Generate Hexo site
        run: npx hexo generate

      - name: Deploy to GitHub Pages
        uses: peaceiris/actions-gh-pages@v3
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./public  # Hexo outputs the generated files to the 'public' directory

